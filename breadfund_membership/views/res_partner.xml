<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    name="button_box">

    <record id="base_view_partner_form_breadfund" model="ir.ui.view">
        <field name="name">base.view_partner_form.breadfund</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        type="action"
                        name="%(breadfund_membership.action_member_contribution)d"
                        context="{'search_default_partner_id': [active_id], 'default_partner_id': active_id}"
                        icon="fa-usd">
                    <field string="Contributions" name="expected_contribution" widget="statinfo"/>
                </button>
                <button class="oe_stat_button"
                        type="action"
                        name="%(breadfund_membership.action_member_payment)d"
                        context="{'search_default_partner_id': [active_id], 'default_partner_id': active_id}"
                        icon="fa-usd">
                    <field string="Gift Payments" name="total_payment" widget="statinfo"/>
                </button>
            </xpath>

            <xpath expr="//sheet" position="before">
               <header>
                    <button name="action_confirm"
                            type="object"
                            string="Confirm Member"
                            states="draft"/>
                    <button name="action_set_draft"
                            type="object"
                            string="Set to Draft"
                            states="confirmed"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed"/>
               </header>
            </xpath>
            <xpath expr="//field[@name='lang']" position="after">
                <field name="bank_account_balance"/>
                <field name="monthly_contribution_amount"/>
            </xpath>
            <notebook position="inside">
                <page string="Sickness" name="sickness">
                    <group>
                        <field name="is_sick_now"/>
                    </group>
                    <field name="sick_ids">
                        <tree editable="bottom">
                            <field name="name" readonly="1"/>
                            <field name="date_start"/>
                            <field name="percentage"/>
                            <field name="complete_month"/>
                            <field name="date_end"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>